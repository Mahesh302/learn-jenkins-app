pipeline{
    agent any
    stages{
        stage('Build'){
            agent{
                docker{
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps{
                sh '''
                ls
                ls -ls
                ls -lart
                node -v
                npm -v
                npm ci
                npm run build
                ls -a
                '''

            }
        }
       
    }
}